<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Kompass Hintergrund -->
    <ImageView
        android:id="@+id/compassImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/compass"
        android:scaleType="centerInside"
        android:contentDescription="@string/app_name" />

    <!-- Azimut-Balken (blau) -->
    <View
        android:id="@+id/azimuthArrow"
        android:layout_width="10dp"
        android:layout_height="4dp"
        android:background="#0000FF"
        android:layout_gravity="center" />

    <!-- Elevation-Balken (rot) -->
    <View
        android:id="@+id/elevationArrow"
        android:layout_width="4dp"
        android:layout_height="10dp"
        android:background="#FF0000"
        android:layout_gravity="center" />

    <!-- Overlay -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#66000000"
        android:padding="12dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/overlayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AOS/LOS: -- / --\nDistance: -- km\nSpeed: -- km/h"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>

    <!-- Button -->
    <Button
        android:id="@+id/selectSatelliteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SelectSat"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp" />
</FrameLayout>
