<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Google Map als Hintergrund -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Azimut-Balken (blau) -->
    <View
        android:id="@+id/azimuthArrow"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:background="@drawable/arrow_horizontal"
        android:layout_gravity="center" />

    <!-- Elevation-Balken (rot) -->
    <View
        android:id="@+id/elevationArrow"
        android:layout_width="32dp"
        android:layout_height="60dp"
        android:background="@drawable/arrow_vertical"
        android:layout_gravity="center" />

    <!-- Overlay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#66000000"
        android:padding="20dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/overlayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AOS/LOS: -- / --\nDistance: -- km\nSpeed: -- km/h"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:lineSpacingExtra="6dp"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <!-- Buttons in horizontaler Anordnung -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/selectSatelliteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SelectSat"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/getFixButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Fix" />
    </LinearLayout>
</FrameLayout>
